<!-- Templates.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Define a ControlTemplate with Border -->
    <ControlTemplate x:Key="BorderedControlTemplate" TargetType="ContentControl">
        <Border BorderBrush="Black" BorderThickness="1" Padding="10">
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <!-- Define a Style that uses the ControlTemplate -->
    <Style x:Key="BorderedStyle" TargetType="ContentControl">
        <Setter Property="Template" Value="{StaticResource BorderedControlTemplate}" />
    </Style>
</ResourceDictionary>
