@{
	ViewData["Title"] = "Index";
	var companies = ViewData["companies"] as List<string>;
	var activePrice = ViewData["activePrice"] as List<string>;
	var activePriceChange = ViewData["cryptoPriceChange"] as List<string>;

	var crypto = ViewData["crypto"] as List<string>;
	var cryptoPrice = ViewData["cryptoPrice"] as List<string>;
	var cryptoPriceChange = ViewData["cryptoPriceChange"] as List<string>;
}

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

	<div class="row">
		<div class="col-6">
			<div class="container-fluid text-center">
				<div class="row">
					<div class="col">
						<h1 class="mt-4">Most Active Stocks</h1>
					</div>
				</div>
			</div>

			<div class="container">
				<div class="row bg-primary text-white fw-bold py-2">
					<div class="col">Company Name</div>
					<div class="col">Price</div>
					<div class="col">Daily Price Change</div>
				</div>

				@for (int i = 0; i < companies.Count; i++)
				{
					<div class="row border-bottom py-2">
						<div class="col">@companies[i]</div>
						<div class="col">@activePrice[i]</div>
						<div class="col">@activePriceChange[i]</div>
					</div>
				}
			</div>
		</div>

		<div class="col-6">
			<div class="container-fluid text-center">
				<div class="row">
					<div class="col">
						<h1 class="mt-4">Crypto Currency</h1>
					</div>
				</div>
			</div>

			<div class="container">
				<div class="row bg-primary text-white fw-bold py-2">
					<div class="col">Crypto</div>
					<div class="col">Price</div>
					<div class="col">Daily Price Change</div>
				</div>

				@for (int i = 0; i < crypto.Count; i++)
				{
					<div class="row border-bottom py-2">
						<div class="col">@crypto[i]</div>
						<div class="col">@cryptoPrice[i]</div>
						<div class="col">@cryptoPriceChange[i]</div>
					</div>
				}
			</div>
		</div>


	</div>


</body>
